extends ../../layout
block head
  title update post - bclindner
  script(src='https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.6.0/tinymce.min.js')
  include tinymce
block content
  h1 update post
  form(method='post',action='/blog/admin/update')
    fieldset
      input(type='hidden', name='old-slug', value=post.slug)
      label(for='title') Title:
      input(type='text', name='title', value=post.title, required)
      label(for='author') Author:
      input(type='text', name='author', value=post.author, required)
      label(for='slug') Post Slug:
      input(type='text', name='slug', placeholder=post.slug, required)
    fieldset
      label(for='content') Content:
      textarea(name='content', id='article-content')=post.content
    fieldset
      input(class='submit', type='submit', value='Update Post')
