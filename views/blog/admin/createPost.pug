extends ../../layout
block head
  title create post - bclindner
  script(src='https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.6.0/tinymce.min.js')
  script.
    tinymce.init({selector: '#article-content'})
block content
  h1 create post
  form(method='post',action='/blog-admin/create')
    fieldset
      label(for='title') Title:
      input(type='text', name='title', placeholder='Title',required)
      label(for='author') Author:
      input(type='text', name='author', placeholder='Author',required)
      label(for='slug') Post Slug:
      input(type='text', name='slug', placeholder='Slug',required)
    fieldset
      label(for='content') Content:
      textarea(name='content', id='article-content')
    fieldset
      input(class='submit', type='submit', value='Create Post')
