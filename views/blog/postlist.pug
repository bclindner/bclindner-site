extends ../layout
block head
  title blog - bclindner
block content
  each post in posts
    article(id=post.slug)
      section.blog-metadata
        h1.title
          a(href='../post/'+post.slug)=post.title
        p.byline=post.author
        p.dateline=post.createdAt
      section.blog-content!=post.content
      a(href='../post/'+post.slug)
        button full article &rarr;
    hr
  p.center='page '+page
  .paginator
    if prev > 0
      a(href=page-1)
        button &larr; prev page
    if next > 0
      a(href=page+1)
        button next page &rarr;
  hr
