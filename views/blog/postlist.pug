extends ../layout
block head
  title blog - bclindner
block content
  h1 blog
  hr
  each post in posts
    include post
    a(href='../post/'+post.slug)
      button full article &rarr;
    hr
  p.center='page '+page
  .paginator
    if prev > 0
      a(href=page-1)
        button &larr; prev page
    if next > 0
      a(href=page+1)
        button next page &rarr;
  hr
